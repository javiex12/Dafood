<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aceptar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comp.dafood.AceptarActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="6"
        android:layout_marginTop="46dp"
        android:id="@+id/observaciones"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="31dp" />

    <TextView
        android:text="Numero de Mesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/observaciones"
        android:layout_alignStart="@+id/textview" />

    <TextView
        android:text="Observaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:id="@+id/textview"
        android:layout_alignBaseline="@+id/observaciones"
        android:layout_alignBottom="@+id/observaciones"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="6"
        android:id="@+id/nmesa"
        android:layout_below="@+id/observaciones"
        android:layout_alignStart="@+id/observaciones" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/nmesa"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginStart="52dp">

    <RadioButton
        android:text="Efectivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/efectivo" />

    <RadioButton
        android:text="Planilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioButton"
        android:layout_alignStart="@+id/editText2"
        android:id="@+id/tarjeta"
        />

    </RadioGroup>

    <Button
        android:text="Enviar pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enviarPedido"
        android:layout_marginBottom="106dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
